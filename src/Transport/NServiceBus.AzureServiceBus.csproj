<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <AssemblyName>NServiceBus.Azure.Transports.WindowsAzureServiceBus</AssemblyName>
    <NuSpecFileName>nservicebus.azureservicebus</NuSpecFileName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>CS0419</NoWarn>
    <NoWarn>1591, 0618</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.Azure.Transports.WindowsAzureServiceBus</PackageId>
    <Description>NServiceBus Transport for the Windows Azure Servicebus</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Janitor.Fody" Version="1.*" PrivateAssets="All" />
    <PackageReference Include="WindowsAzure.ServiceBus" Version="[4.1.0, 5.0.0)" />
    <PackageReference Include="NServiceBus" Version="[7.0.0-*, 8.0.0)" />
    <PackageReference Include="Obsolete.Fody" Version="4.*" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="2.*" PrivateAssets="All" />
    <PackageReference Include="Particular.CodeRules" Version="*" PrivateAssets="All" />

    <Reference Include="System.Configuration" />
    <Reference Include="System.Transactions" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" PrivateAssets="All" />
  </ItemGroup>
</Project>